  <div class="container">
    <div class="card bg-light mx-auto">

      <form id="reservationForm" action="/reservation/new/{{docsList._id}}" method="POST">
        <div style="background-color: rgb(36, 162, 208);" class="card-header text-white"><strong>You are creating a new
            appointment</strong></div>

        <div class="card-body cardClass">
          <table>

            <tr class="d-flex">
              <td><label for="docName">Doctor's Name:</label></td>
              <td><input style="background-color: darkgray;" value="{{docsList.name}}" type="text" name="docName"
                  id="docName" readonly></td>
            </tr>
            <tr class="d-flex">
              <td><label for="specs">Specialization:&nbsp&nbsp</label></td>
              <td><input style="background-color: darkgray;" value="{{docsList.specialization}}" type="text"
                  name="specs" id="specs" readonly></td>
            </tr>
            <tr class="d-flex">
              <td><label for="fname">Patient's Name:</label></td>
              <td><input style="background-color: darkgray;" value="{{user.userName}}" type="text" name="fname"
                  id="fname" readonly></td>
            </tr>
            <tr class="d-flex">
              <td><label for="email">Patient's Email:&nbsp</label></td>
              <td><input style="background-color: darkgray;" value="{{user.email}}" type="text" name="email" id="email"
                  readonly></td>
            </tr>

            <tr class="d-flex">
              <td><label for="hospital">Select Hospital:</label></td>

              <td><select name="hospital" id="hospital" required>

                  {{#ifNotEquals hospital null}}
                  <option value="{{hospital._id}}">{{hospital.name}}</option>
                  {{else}}
                  <option value="">Select</option>
                  {{#each HospitalList}}
                  <option value="{{this._id}}">{{this.name}}</option>
                  {{/each}}
                  {{/ifNotEquals}}
                </select></td>
            </tr>
            <br />
            <tr class="d-flex">
              <td><label
                  for="resvDate">Date:&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</label>
