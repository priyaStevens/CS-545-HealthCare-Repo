              <td><input type="date" name="resvDate" id="resvDate" value="" required></td>
            </tr>
            <tr class="d-flex">
              <td>
                <div class="row">
                  <div class="columnRight">
                    <button type="submit" class="btn btn-primary">Schedule</button>
                  </div>


                  <div class="column">
                    <a class="btn btn-primary" href="/doctors">Back</a>
                  </div>
                </div>
              </td>
